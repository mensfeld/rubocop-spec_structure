{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "includePaths": [
    ".ruby-version",
    "Gemfile",
    "Gemfile.lint",
    "rubocop-spec_structure.gemspec",
    ".github/workflows/**",
    "package.json"
  ],
  "packageRules": [
    {
      "minimumReleaseAge": "7 days",
      "matchDepNames": [
        "/*/"
      ]
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "pinDigests": true
    },
    {
      "description": "Group ruby/setup-ruby action with ruby version updates",
      "matchPackageNames": [
        "ruby/setup-ruby",
        "ruby"
      ],
      "groupName": "ruby setup"
    }
  ],
  "minimumReleaseAge": "7 days"
}
